<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        android:layout_margin="10dp"
        app:cardBackgroundColor="@color/white"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="300dp">
            <TextView
                android:id="@+id/users_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:gravity="end"
                android:layout_marginEnd="20dp"
                android:text="id"
                android:textSize="15sp"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/users_id"
                android:gravity="start"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:text="userName"
                android:textAllCaps="true"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                />

            <TextView
                android:id="@+id/user_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/user_name"
                android:gravity="start"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:text="userEmail"
                android:textSize="15sp"
                android:layout_marginBottom="5dp"
                android:textStyle="normal"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/user_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/user_email"
                android:gravity="start"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:text="userCity"
                android:textSize="15sp"
                android:layout_marginBottom="5dp"
                android:textStyle="normal"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/user_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/user_city"
                android:gravity="start"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:text="userPhone"
                android:textSize="15sp"
                android:layout_marginBottom="5dp"
                android:textStyle="normal"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/user_webSite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/user_phone"
                android:gravity="start"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:text="userWebSite"
                android:textSize="15sp"
                android:layout_marginBottom="5dp"
                android:textStyle="normal"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/user_company_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/user_webSite"
                android:gravity="start"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:text="userWebSite"
                android:textSize="15sp"
                android:layout_marginBottom="5dp"
                android:textStyle="normal"
                android:textColor="@color/black"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</layout>